<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item2" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: build_account_name( resource, user) %>
  <%= render_column css: "hidden sm:table-cell ", content: resource.dashboard.name rescue 'N/A'%>
  <%= render_column css: "hidden md:table-cell ", content: display_time( resource.created_at, user) %>
  <%= render_column content: record_state( resource) %>
  <%= render_column css: " font-medium text-right ", content: render_component( "edit", resource: resource, url: edit_resource_url(resource)) %>
<% end %>
