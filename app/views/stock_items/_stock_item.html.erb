<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: (link_to( resource.asset.name, stock_item_url(resource), data: { 'turbo-frame': '_top' }) rescue '-') %>
  <%= render_column css: " text-gray-900 font-medium ", content: (link_to( resource.stock_location.name, resource.stock_location) rescue raw "<span class='text-red-500'>stock_location missing!</span>") %>
  <%= render_column css: "hidden md:table-cell ", content: resource.batch_number %>
  <%= render_column css: "hidden md:table-cell ", content: display_time(resource.expire_at, user) %>
  <%= render_column css: "hidden md:table-cell text-right", content: resource.nbr_pallets %>
  <%= render_column css: "hidden md:table-cell text-right", content: (resource.quantity||0) %>
  <%= render_column css: "hidden md:table-cell ", content: record_state(resource.asset) %>
  <%= render_column css: " font-medium text-right ", type: "edit", resource: resource, url: edit_resource_url(resource) %>
<% end %>
