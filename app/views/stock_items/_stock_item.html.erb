<tr id="<%= dom_id resource %>"  data-controller="list-item">
  <%= render_component "resource/list_checkbox", resource: resource %>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= link_to resource.asset.name, stock_item_path(resource), data: { turbo_frame: "_top" } %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= link_to( resource.stock_location.name, resource.stock_location) rescue raw "<span class='text-red-500'>stock_location missing!</span>" %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= resource.batch_number %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_time resource.expire_at, user %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 ">
    <%= resource.nbr_pallets %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 float-right">
    <%= (resource.quantity||0) %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= record_state resource.asset %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= render_component "edit", resource: resource, url: edit_resource_url(resource) %>
  </td>
</tr>  
