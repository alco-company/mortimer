<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: ( link_to( resource.user_name, user_url(resource), data: { turbo_frame: "_top" } )rescue '-') %>
  <%= render_column css: "hidden md:table-cell ", content:  resource.email %>
  <%= render_column css: "hidden md:table-cell ", content:  display_time(resource.logged_in_at, user) %>
  <%= render_column css: "hidden md:table-cell ", content:  display_time(resource.created_at, user) %>
  <%= render_column css: "hidden md:table-cell ", content: resource.confirmation_state %>
  <%= render_column css: " font-medium text-right ", content: render_component( "edit", resource: resource, url: edit_resource_url(resource)) %>
<% end %>
