<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: ( link_to( resource.scheme, uri_scheme_url(resource), data: { turbo_frame: "_top" } )rescue '-') %>
  <%= render_column css: "hidden md:table-cell ", content:  resource.purpose %>
  <%= render_column css: "hidden md:table-cell ", content:  resource.reference %>
  <%= render_column css: "hidden md:table-cell ", content:  resource.general_format %>
  <%= render_column css: "hidden md:table-cell ", content: record_state(resource) %>
  <%= render_column css: " font-medium text-right ", content: render_component( "edit", resource: resource, url: edit_resource_url(resource)) %>
<% end %>
