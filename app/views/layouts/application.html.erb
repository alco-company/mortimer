<!DOCTYPE html>
<html>
  <head>
    <title>S P E I C H E R</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= yield :head %>
    <% if Rails.env.development? %>
      <%= javascript_include_tag "hotwire-livereload", defer: true %>
    <% end %>
  </head>

  <body>
    <%#= render Sidebar::MobileComponent.new current: Current %>
    <div class="flex flex-col flex-1">
      <%#= render Topbar::Component.new( current_user: Current.user, placeholder: raw( t('topbar.search'))) %>
      <main>
        <div class="py-6">
          <%= yield %>
        </div>
      </main>

      <%= turbo_frame_tag 'form_slideover' do %>
        <%#= render Resource::FormComponent.new %>
      <% end %>

      <div id="modal_content"></div>

    </div>

    <%#= render "shared/takiro" %>
    <%#= render partial: "shared/notifications" %>
    <div id="unauthorized"></div>
  </body>
</html>
