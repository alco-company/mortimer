<tr id="<%= dom_id resource %>"  data-controller="list-item">
  <%= render_component "resource/list_checkbox", resource: resource %>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= link_to resource.asset.name, stocked_product_path(resource), data: { turbo_frame: "_top" } %>
  </td>
  <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= resource.stock_unit %>
  </td>
  <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= resource.nbr_pallets %>
  </td>
  <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500 float-right">
    <%= resource.stock_items.sum(:quantity) %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= record_state resource.asset %>
  </td>
  <!-- <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= render_component "edit", resource: resource, url: edit_resource_url(resource) %>
  </td>-->
</tr>  
