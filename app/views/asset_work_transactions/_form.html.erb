<%= render_form( resource: resource) do |form| %>
  <%= render_form_hidden_field resource: resource, form: form, field: :account_id, value: current_account.id %>
  <%= render_form_hidden_field resource: resource, form: form, field: :eventable_type, value: "AssetWorkTransaction" %>
  <%#= form.fields_for :eventable do |assoc_form| %>
  <%= render_form_fields_for( form: form, field: :eventable, assoc: resource.eventable ) do |assoc_form| %>
    <%= render_form_header( resource: resource, title: form_header_title, description: form_header_description ) %>

    <!-- Divider container -->
    <%= render_form_divider do %>

      <!-- Name -->
      <%#= render_form_text_field( resource: resource, form: form, field: :name, title: t('.name'), focus: true, required: true) %>

      <!-- punch_asset_ip_addr -->
      <%#= render_form_text_field( resource: resource.eventable, form: assoc_form, field: :punch_asset_ip_addr, title: t('.punch_asset_ip_addr')) %>

      <!-- punched_at (date) -->
      <%= render_form_datetime_field( resource: resource, form: assoc_form, field: :punched_at, required: true) %>
      <%#= render_component "resource/input_date", form: assoc_form, field: :punched_at, resource: resource, title: t('.punched_at'), required: true %>

      <!-- reason -->
      <%= render_form_text_field( resource: resource, form: assoc_form, field: :reason, title: t('.reason')) %>

      <!-- minutes_spent -->
      <%#= render_form_text_field(resource: resource, form: form, field: :minutes_spent, title: t('.minutes_spent'), required: true) %>

      <!-- state -->
      <%= render_form_text_field( resource: resource, form: form, field: :state, title: t('.state'), required: true ) %>

    <% end %>
  <% end %>

  <%= render_form_action_buttons resource: resource, delete_url: resource_url(), deleteable: !resource.new_record? %>
  <%#= render_component "action_button", resource: resource, delete_url: resource_url(), deleteable: !resource.new_record? %>

<% end %>
