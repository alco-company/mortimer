<tr id="<%= dom_id resource %>"  data-controller="list-item">
  <%= render_component "resource/list_checkbox", resource: resource %>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= link_to resource.asset.name, employee_asset_work_transaction_path(resource.asset.assetable,resource), data: { turbo_frame: "_top" } %>
  </td>
  <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_time resource.punched_at, current_user %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= record_state resource.event %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%#= resource.work_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= render_component "edit", resource: resource, url: edit_employee_asset_work_transaction_url(resource.asset.assetable,resource) %>
  </td>
</tr>  
