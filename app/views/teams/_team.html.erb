<tr id="<%= dom_id resource %>"  data-controller="list-item">
  <%= render_component "resource/list_checkbox", resource: resource %>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= resource.name %>
  </td>
  <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= resource.task.name rescue '-' %>
  </td>
  <td class="hidden lg:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= resource.members %>
  </td>
  <td class="hidden lg:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_time resource.created_at %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= record_state resource %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= render EditComponent.new resource: resource, url: edit_resource_url(resource) %>
  </td>
</tr>  
