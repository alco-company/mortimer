<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item2" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: ( link_to( resource.name, pupil_pupil_transaction_url(resource.pupil,resource), data: { turbo_frame: "_top" } ) rescue '-') %>
  <%= render_column css: "hidden sm:table-cell ", content: display_time( resource.created_at, user ) %>
  <%= render_column content: (record_state( resource.event ) rescue '-') %>
  <%= render_column css: "text-right", content: display_hours_minutes(resource.work_minutes) %>
  <%= render_column css: " font-medium text-right ", content: render_component( "edit", resource: resource, url: edit_resource_url(resource)) %>
<% end %>
