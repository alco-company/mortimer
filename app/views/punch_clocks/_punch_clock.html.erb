<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: link_to( resource.asset.name, punch_clock_url(resource), data: { 'turbo-frame': '_top' }) %>
  <%= render_column css: "hidden sm:table-cell ", content: (link_to( resource.location.name, location_url(resource.location), data: { 'turbo-frame': '_top' }) rescue '-')  %>
  <%= render_column css: "hidden md:table-cell ", content: resource.ip_addr %>
  <%= render_column css: "hidden md:table-cell ", content: display_time(resource.last_punch_at, user) %>
  <%= render_column content: display_token_link(resource) %>
  <%= render_column css: "hidden md:table-cell ", content: record_state(resource.asset) %>
  <%= render_column css: " font-medium text-right ", content: render_component( "edit", resource: resource, url: edit_resource_url(resource)) %>
<% end %>
