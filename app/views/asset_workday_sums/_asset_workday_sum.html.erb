<tr id="<%= dom_id resource %>"  data-controller="list-item">
  <%= render_component "resource/list_checkbox", resource: resource %>
  <% unless parent? %>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= link_to resource.asset.name, employee_url(resource.asset.assetable), data: { 'turbo-frame': '_top' } %>
  </td> 
  <% end %>
  <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_date resource.work_date, user %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.work_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.break_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.ot1_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.ot2_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.sick_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.free_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.holiday_free_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.child_sick_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.nursing_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.senior_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.unpaid_free_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.lost_work_revenue_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.child_leave_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.leave_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.free_prev_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= display_hours_minutes resource.pgf56_minutes %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= render_component "edit", resource: resource, url: edit_resource_url(resource) %>
  </td>
</tr>  
