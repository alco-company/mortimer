<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: link_to( resource.participant.name, organization_path(resource), data: { 'turbo-frame': '_top' }) %>
  <%= render_column css: "hidden sm:table-cell ", content: resource.cvr_number %>
  <%= render_column css: "hidden md:table-cell ", content: resource.product_resource %>
  <%= render_column css: "hidden md:table-cell ", content: resource.gtin_prefix %>
  <%= render_column css: "hidden md:table-cell ", content: record_state(resource.participant) %>
  <%= render_column css: " font-medium text-right ", type: "edit", resource: resource, url: edit_resource_url(resource) %>
<% end %>
