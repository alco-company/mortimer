<div 
  class="max-w-full lg:max-w-screen-2xl mx-auto sm:px-6 lg:px-8" 
  data-controller="tabs"  
  data-tabs-active-tab="border-indigo-500 text-indigo-600" 
  >
  <%= render_component "resource/show_header", 
      title: resource.name, 
      breadcrumbs: @breadcrumbs, 
      current: Current, 
      tabs: [ 
        {id: "info_tab", url: "#info", label: t('.info'), action: "click->tabs#change" },
        {id: "stocked_products_tab", url: product_stocked_products_url(resource), label: t('.stocked_products'), action: "click->tabs#change" },
        {id: "stock_locations_tab", url: product_stock_locations_url(resource), label: t('.stock_locations'), action: "click->tabs#change" },
        {id: "stock_item_transactions_tab", url: product_stock_item_transactions_url(resource), label: t('.stock_item_transactions'), action: "click->tabs#change" }
        # {id: "documents_tab", url: product_documents_url(resource), label: t('.documents'), action: "click->tabs#change" }
      ] %>

  <div id="info_tab" class="hidden py-4 px-4 " data-tabs-target="panel">

    <%= render_component "element/search_and_button" %>

    <!-- This example requires Tailwind CSS v2.0+ -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900"><%= t '.product' %></h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= t '.product.description' %></p>
      </div>
      <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
        <dl class="sm:divide-y sm:divide-gray-200">
          <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500"><%= t '.name' %></dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= resource.name %></dd>
          </div>
          <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500"><%= t '.barcode' %></dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= resource.supplier_barcode %></dd>
          </div>
          <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500"><%= t '.organization' %></dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= link_to resource.organization.name, organization_url(resource.organization) rescue '-' %></dd>
          </div>
          <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500"><%= t '.quantity_pallets' %></dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= resource.nbr_pallets %> <%= t('.pallets') %> </dd>
          </div>
          <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500"><%= t '.quantity_unit' %></dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= (resource.quantity||0) %> <%#= resource.unit %> </dd>
          </div>
          <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500"><%= t '.created_at' %></dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= display_time resource.created_at, Current.user %> </dd>
          </div>
          <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500"><%= t '.updated_at' %></dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= display_time resource.updated_at, Current.user %> </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <div id="stocked_products_tab" class="hidden shadow overflow-hidden border-b border-gray-200 sm:rounded-lg" data-tabs-target="panel">
    <%= turbo_stream_from "stocked_products"  %>
    <%= turbo_frame_tag "stocked_products", loading: "lazy", src: product_stocked_products_url(resource) do %>
      <span class="py-2 px2">
        <%= t('loading') %>
      </span>
    <% end %>
  </div>

  <div id="stock_locations_tab" class="hidden shadow overflow-hidden border-b border-gray-200 sm:rounded-lg" data-tabs-target="panel">
    <%= turbo_stream_from "stock_locations"  %>
    <%= turbo_frame_tag "stock_locations", loading: "lazy", src: product_stock_locations_url(resource) do %>
      <span class="py-2 px2">
        <%= t('loading') %>
      </span>
    <% end %>
  </div>

  <div id="stock_item_transactions_tab" class="hidden shadow overflow-hidden border-b border-gray-200 sm:rounded-lg" data-tabs-target="panel">
    <%= turbo_stream_from "stock_item_transactions"  %>
    <%= turbo_frame_tag "stock_item_transactions", loading: "lazy", src: product_stock_item_transactions_url(resource) do %>
      <span class="py-2 px2">
        <%= t('loading') %>
      </span>
    <% end %>
  </div>

  <div id="documents_tab" class="hidden shadow overflow-hidden border-b border-gray-200 sm:rounded-lg" data-tabs-target="panel">
    <%#= turbo_stream_from "documents"  %>
    <%#= turbo_frame_tag "documents", loading: "lazy", src: product_documents_url(resource) do %>
      <span class="py-2 px2">
        <%= t('loading') %>
      </span>
    <%# end %>
  </div>
</div>




