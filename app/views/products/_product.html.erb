<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: link_to( resource.asset.name, product_url(resource), data: { 'turbo-frame': '_top' }) %>
  <%= render_column css: "hidden sm:table-cell ", content: link_to( resource.organization.name, organization_url(resource.organization), data: { 'turbo-frame': '_top' }) rescue '' %>
  <%= render_column css: "hidden md:table-cell ", content: resource.supplier_barcode %>
  <%= render_column css: "hidden md:table-cell ", content: record_state(resource.asset) %>
  <%= render_column css: " font-medium text-right ", type: "edit", resource: resource, url: edit_resource_url(resource) %>
<% end %>
