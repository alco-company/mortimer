<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item2" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: resource.name %>
  <%= render_column css: "hidden sm:table-cell ", content: resource.layout %>
  <%= render_column css: " font-medium text-right ", type: "edit", resource: resource, url: edit_resource_url(resource) %>
<% end %>
