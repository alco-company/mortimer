<div class="min-h-full flex ">
  <div class="flex-1 flex flex-col justify-start py-12 px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
    <div class=" max-w-md lg:w-md mx-auto sm:px-6 lg:px-8">
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6 lg:px-8">
          <%# <img class="h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Workflow"> %>
          <h2 class="mt-6 text-3xl font-extrabold text-gray-900"> <%= t('.request_confirmation_email_title') %></h2>
          <div class="mt-2 text-sm text-gray-600">
            <p> <%= raw_t('.request_confirmation_email_instruction') %></p>
          </div>
        </div>

        <div class="mt-6 px-4 sm:px-6 lg:px-8">          
          <%= form_with url: confirmations_path, class: "space-y-6", scope: :user do |form| %> 
            <div class="w-full sm:max-w-xs">
              <label for="email" class="sr-only">Email adresse</label>
              <%= form.email_field :email, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "you@example.com", required: true %>
            </div>
            <div class="space-y-1">
              <div class="mt-1 py-6">
                <button type="submit" class="mt-3 w-full inline-flex items-center justify-center px-4 py-2 border border-transparent shadow-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:text-sm"> <%= t('.request_confirmation_email_button') %></button>
              </div>
            </div>
          <% end %>

          <div class="flex items-center justify-between">
            <div class="flex items-center py-4">
              <a href="/login" class="text-sm font-medium text-indigo-600 hover:text-indigo-500"> <%= t('.login') %> </a>
            </div>

            <div class="text-sm py-4">
                <a href="/passwords/new" class="text-sm font-medium text-indigo-600 hover:text-indigo-500"> <%= t('.reset_password') %> </a>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
