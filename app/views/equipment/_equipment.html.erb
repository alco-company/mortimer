<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: link_to( resource.name, "/equipment/#{resource.id}", data: { 'turbo-frame': '_top' }) %>
  <%= render_column css: "hidden sm:table-cell ", content: (display_time(resource.purchased_at, user) rescue '-') %>
  <%= render_column css: "hidden md:table-cell ", content: record_state(resource) %>
  <%= render_column css: "hidden md:table-cell ", content: (resource.organization.name rescue '-') %>
  <%#= render_column content: display_token_link(resource) %>
  <%= render_column css: " font-medium text-right ", 
    content: link_to( t('book'), book_equipment_url(resource), class: "inline-flex items-center px-2.5 py-1.5 mr-3 border border-transparent text-xs font-medium rounded text-indigo-700 bg-green-300 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", data: { action: "click->switchboard#toggleListFormSleeve", 'turbo-action': 'advance', 'turbo-frame': 'form_slideover' }) + 
    render_component( "edit", resource: resource, url: "/equipment/#{resource.id}/edit") %>
<% end %>

