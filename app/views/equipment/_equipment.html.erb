<%= render_row attribs: { id: dom_id(resource), data: { controller: "list-item" }} do %>
  <%= render_component "resource/list_checkbox", resource: resource %>
  <%= render_column css: " text-gray-900 font-medium ", content: link_to( resource.name, "/equipment/#{resource.id}", data: { 'turbo-frame': '_top' }) %>
  <%= render_column css: "hidden sm:table-cell ", content: (display_time(resource.asset_work_transactions.last.punched_at, user) rescue '-') %>
  <%= render_column css: "hidden md:table-cell ", content: record_state(resource) %>
  <%= render_column content: display_token_link(resource) %>
  <%= render_column css: " font-medium text-right ", content: render_component( "edit", resource: resource, url: "/equipment/#{resource.id}/edit") %>
<% end %>
