<!-- Action buttons -->
<div class="sticky bottom-0 flex justify-start px-4 border-t border-gray-200 bg-gray-50 py-5 sm:px-6 z-10">
  <% if @deleteable %>
    <div class="flex-none w-1/3 h-14">
      <%= link_to @delete_url, class: "button delete-button", data: { turbo_confirm: 'Are you sure?', turbo_method: :delete, action: "click->form-sleeve#toggle" } do %>
        <%= t :delete %>
      <% end %>
    </div>
  <% end %>
  <div class="flex justify-end w-2/3">
    <div class="flex-initial sm:space-x-3">
      <button data-form-sleeve-target="cancel" data-action="click->form-sleeve#cancel" type="button" class="button cancel-button">
        <%= t :cancel %>
      </button>
      <%# form.submit "Sign Up" %>
      <button data-form-sleeve-target="save" type="submit" class="button save-button">
        <span class="group-disabled:hidden"><%= @resource.new_record? ? t(:create) : t(:update) %></span>
        <span class="hidden group:disabled:block group-disabled:cursor-wait"><%= t('.updating') %></span>
      </button>
    </div>
  </div>
</div>
