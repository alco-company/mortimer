<div 
  id="sidebar"
  data-controller="navigation--sidebar-component"
  data-action="speicherMessage@window->navigation--sidebar-component#handleMessages"
  data-navigation--sidebar-component-target="sidebar"
  class="hidden lg:flex lg:flex-col lg:w-64 lg:fixed lg:inset-y-0 lg:border-r lg:border-gray-200 lg:pt-5 lg:pb-4 lg:bg-gray-100">
  <div class="flex items-center flex-shrink-0 px-6">
    <%= image_tag helpers.account_logo( @current.account, "250!"), class: "h-8 w-auto", alt: "logo" %>
    <%# <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/workflow-logo-purple-500-mark-gray-700-text.svg" alt="Workflow"> %>
  </div>
  <!-- Sidebar component, swap this element with another sidebar if you like -->
  <div class="mt-6 h-0 flex-1 flex flex-col overflow-y-auto">
    <!-- User account dropdown -->
    <%= helpers.render_component "resource/user_account", current: @current %>
    <% unless @current.user.nil? %>
      <!-- Sidebar Search -->
      <div class="px-3 mt-5">
        <%= helpers.render_component "navigation/search", container_classes: "ml-2 mt-1 relative rounded-md shadow-sm", search_placeholder: t(".search") %>
      </div>
      <!-- Navigation -->
      
      <%= helpers.render_component "navigation/menu", destination: "desktop", current: @current, nav_classes: "px-3 mt-6", link_classes: "bg-gray-100 hover:bg-gray-200 text-gray-500 group flex items-center px-2 py-2 text-sm font-medium rounded-md" %>
    <% end %>
  </div>
</div>
