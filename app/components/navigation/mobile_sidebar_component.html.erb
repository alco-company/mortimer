<div 
  id="mobile-sidebar"
  data-controller="navigation--mobile-sidebar-component"
  data-navigation--mobile-sidebar-component-target="mobilesidebar"
  class="relative z-40 lg:hidden" role="dialog" aria-modal="true">
  <!--
  data-action="speicherMessage@window->navigation--mobile-sidebar-component#handleMessages"
    Off-canvas menu backdrop, show/hide based on off-canvas menu state.

    Entering: "transition-opacity ease-linear duration-300"
      From: "opacity-0"
      To: "opacity-100"
    Leaving: "transition-opacity ease-linear duration-300"
      From: "opacity-100"
      To: "opacity-0"
  -->
  <div
    data-action="click->navigation--mobile-sidebar-component#closeSidebar"
    class="fixed inset-0 bg-gray-600 bg-opacity-75"></div>

  <div class="fixed inset-0 flex z-40">
    <!--
      Off-canvas menu, show/hide based on off-canvas menu state.

      Entering: "transition ease-in-out duration-300 transform"
        From: "-translate-x-full"
        To: "translate-x-0"
      Leaving: "transition ease-in-out duration-300 transform"
        From: "translate-x-0"
        To: "-translate-x-full"
    -->
    <div class="relative flex-1 flex flex-col max-w-xs w-full pt-5 pb-4 bg-white">
      <!--
        Close button, show/hide based on off-canvas menu state.

        Entering: "ease-in-out duration-300"
          From: "opacity-0"
          To: "opacity-100"
        Leaving: "ease-in-out duration-300"
          From: "opacity-100"
          To: "opacity-0"
      -->
      <div class="absolute top-0 right-0 -mr-12 pt-2">
        <button 
          data-action="click->navigation--mobile-sidebar-component#closeSidebar"
          type="button" 
          class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
          <span class="sr-only">Close sidebar</span>
          <!-- Heroicon name: outline/x -->
          <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="flex-shrink-0 flex items-center px-4">
        <%= image_tag helpers.account_logo( @current.account, "250!"), class: "h-8 w-auto", alt: "logo" %>
        <%# <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/workflow-logo-purple-500-mark-gray-700-text.svg" alt="Workflow"> %>
      </div>
      <div class="mt-5 flex-1 h-0 overflow-y-auto">
        <% if @current.nil? || @current.user.nil? %>
          <button type="button" class="group w-full bg-gray-100 rounded-md px-3.5 py-2 text-sm text-left font-medium text-gray-700 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-purple-500" id="options-menu-button" aria-expanded="false" aria-haspopup="true">
            <span 
              class="flex w-full justify-between items-center">
                <span class="flex min-w-0 items-center justify-between space-x-3">
                  <!--<img class="w-10 h-10 bg-gray-300 rounded-full flex-shrink-0" src="https://images.unsplash.com/photo-1502685104226-ee32379fefbe?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=3&w=256&h=256&q=80" alt="">-->
                  <span class="pl-7 flex-1 flex flex-col min-w-0">
                    <!--<span class="text-gray-900 text-sm font-medium truncate">Login</span>-->
                    <a href="/login" class="block py-2 px-4 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900" > Login </a>
                    <%#= button_to t( :sign_on ), login_path, data: { turbo: "false", action: "click->resource--user-profile-component#hide"}, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900"  %>
                  </span>
                </span>
            </span>
          </button>
        <% else %>
          <%= helpers.render_component "navigation/menu", destination: "mobile", current: @current, nav_classes: "px2", link_classes: "bg-white hover:bg-gray-100 text-gray-900 group flex items-center px-2 py-2 text-base leading-5 font-medium rounded-md" %>
        <% end %>
      </div>
    </div>

    <div class="flex-shrink-0 w-14" aria-hidden="true">
      <!-- Dummy element to force sidebar to shrink to fit close icon -->
    </div>
  </div>
</div>
